<launch>
  <!-- arg 선언 -->
  <arg name="cluster_to_obstacle_param_file" 
       default="$(find-pkg-share cluster_to_obstacle_cpp)/config/cluster_to_obstacle_node.param.yaml"/>

  <!-- 노드 실행 -->
  <node pkg="cluster_to_obstacle_cpp"
        exec="cluster_to_obstacle_node"
        name="cluster_to_obstacle"
        output="screen">

    <!-- ROS2 XML에서 param file 불러오는 올바른 문법 -->
    <param from="$(var cluster_to_obstacle_param_file)" />

    <param name="use_sim_time" value="true"/>

  </node>
</launch>

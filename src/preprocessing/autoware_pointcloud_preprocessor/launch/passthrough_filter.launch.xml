<launch>
  <arg name="input_topic_name" default="/livox/lidar"/>
  <arg name="output_topic_name" default="/passthrough/lidar"/>

  <arg name="passthrough_filter_param_file" default="$(find-pkg-share autoware_pointcloud_preprocessor)/config/passthrough_filter_node.param.yaml"/>

  <node pkg="autoware_pointcloud_preprocessor" exec="passthrough_filter_node" name="passthrough_filter">
    <param from="$(var passthrough_filter_param_file)"/>
    <remap from="input" to="$(var input_topic_name)"/>
    <remap from="output" to="$(var output_topic_name)"/>

  </node>
</launch>
